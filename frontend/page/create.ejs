    </div>
    <div>
      <p>Create Blog</p>
    </div>
    <div class="empty"></div>
  </div>
<form action="/postcontent" method="get">
  <div class="title">
    <label for="">Post Title</label>
    <textarea name="title" id="" placeholder="Title name" class="textbox" required></textarea>
  </div>
  <div class="discription">
    <label for="">Description</label>
    <textarea name="description" id="" placeholder="Content" class="textbox"></textarea>
  </div>
  <div class="url">
    <label for="">URL picture</label>
    <textarea name="picture" id="" placeholder="URL Picture (If wrong URL,it going to be defalut picture)" class="textbox"></textarea>
  </div>
  <div class="post">
    <div class="checkbox">
      <div class="group">
        <input type="checkbox" name="SIT" value="SIT" id="SIT">
        <label for="check1"><span>SIT</span></label>
      </div>
      <div class="group">
        <input type="checkbox" name="IT" value="IT" id="IT">
        <label for="check2"><span>IT</span></label>
      </div>
      <div class="group">
        <input type="checkbox" name="CS" value="CS" id="CS">
        <label for="check3"><span>CS</span></label>
      </div>
      <div class="group">
        <input type="checkbox" name="DSI" value="DSI" id="DSI">
        <label for="check4"><span>DSI</span></label>
      </div>
    </div>
    <div class="postBtn">
      <button type="submit">Post</button>
    </div>
  </div>
</form>
</div>
</body>

</html>